                    }
                    else if (numeroPersonasCotizar < (numeroAdultoCotizar + numeroNiños511Cotizar + numeroNiños14Cotizar)) {
                        $("#estatus_numpersonas").css('background-color', 'red');
                        $("#estatus_numpersonas").css('color', 'white');
