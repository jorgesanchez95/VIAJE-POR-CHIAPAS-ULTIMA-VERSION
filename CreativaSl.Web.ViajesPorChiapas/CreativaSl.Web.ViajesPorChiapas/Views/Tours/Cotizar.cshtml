                    else {
                        $("#estatus_numpersonas").css('background-color', 'green');
                        $("#estatus_numpersonas").css('color', 'white');
                        $("#estatus_numpersonas").text('@Html.Raw(locale.GetResourceCotizarTours("numeroPersonasCorrectas"))');
                    }
