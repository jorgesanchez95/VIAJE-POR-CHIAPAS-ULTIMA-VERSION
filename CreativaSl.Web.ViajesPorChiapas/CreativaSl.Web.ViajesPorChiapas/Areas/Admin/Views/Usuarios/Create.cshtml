@model CreativaSl.Web.ViajesPorChiapas.Models.UsuarioModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Administrador/plugins/cropper/cropper.min.css")" />

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="page-content">
        <div id="Error" class="error message" style="display: none">
            <h3></h3>
        </div>
        <div id="Success" class="success message" style="display: none">
            <h3></h3>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">Viaje Por Chiapas<small>  Administración</small></h3>
                </div>
            </div>
            <div class="tab-pane">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Nuevo Usuario</div>
                    </div>
                    @using (Html.BeginForm("Create", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.id_usuario)


                        <div class="portlet-body form">
                            <h3 class="form-section">Información del usuario</h3>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Nombre del Usuario<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.nombre, new { id = "nombre", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.nombre)
                                            <span class="help-block">Ingrese el nombre del usuario</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Apellido Paterno del Usuario<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.apPat, new { id = "apPat", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.apPat)
                                            <span class="help-block">Ingrese el apellido paterno del usuario</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Apellido Materno del Usuario<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.apMat, new { id = "apMat", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.apMat)
                                            <span class="help-block">Ingrese el apellido materno del usuario</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Fecha Nacimiento<span class="required"> *</span></label>
                                        <div class="controls">
                                            <div id="datetimepicker3" class="input-append date calendar">
                                                @Html.TextBoxFor(model => model.fechaNac, "{0:dd/MM/yyyy}", new { id = "fechaNac", @class = "span12 m-wrap", @readonly="readonly"})
                                                <span class="add-on">
                                                    <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.fechaNac)
                                            <span class="help-block">Ingrese la fecha de nacimiento del usuario</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Dirección<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.direccion, new { id = "direccion", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.direccion)
                                            <span class="help-block">Ingrese la dirección del usuario</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Teléfono<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.telefono, new { id = "telefono", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.telefono)
                                            <span class="help-block">Ingrese el teléfono del usuario</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Correo Electrónico<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.email, new { id = "email", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.email)
                                            <span class="help-block">Ingrese el correo electronico del usuario</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Tipo de usuario<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.DropDownListFor(model => model.tablaTipoUsuariosCmb, ViewData["cmbTipoUsuario"] as SelectList, new { id = "ListTipoUsuario", @class = "span12 m-wrap chosen" })
                                            @Html.ValidationMessageFor(model => model.tablaTipoUsuariosCmb)
                                        </div>
                                    </div>
                                    <span class="help-block">Seleccione el tipo de usuario </span>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Usuario<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.cuenta, new { id = "user", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.cuenta)
                                            <span class="help-block">Ingrese el user del usuario</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Contraseña<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.PasswordFor(model => model.password, new { id = "password", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.password)
                                            <span class="help-block">Ingrese la contraseña del usuario</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                             <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">ALT<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.alt, new { id = "alt", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.alt)
                                            <span class="help-block">Alt</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Title<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.title, new { id = "title", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.title)
                                            <span class="help-block">Title</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                             <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Nombre Imagen<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.nombreArchivo, new { id = "nombreArchivo", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.nombreArchivo)
                                            <span class="help-block">Nombre Imagen</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <h3 class="form-section">Imagen</h3>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                                <div class="img-container" style="max-height:300px; min-height:300px;">
                                                    <img src="@Url.Content("~/Imagenes/default.png")" alt="Picture" id="imgLugar" />
                                                </div>
                                                <br />
                                                <div class="btn-group">
                                                    <label class="btn btn-primary btn-upload" for="inputImage" title="Upload image file">
                                                        <span class="btn btn-file">
                                                            <span class="fileupload-new">Seleccionar Imagen</span>
                                                            @Html.TextBoxFor(model => model.foto, new { type = "file", id = "inputImage", accept = ".png, .jpg, .jpeg" })
                                                            @Html.ValidationMessageFor(model => model.foto)
                                                            <p id="val-img"></p>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <input type="submit" value="Guardar" class="btn green">
                                <a href="@Url.Action("Index","Usuarios")" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#inputImage').change(function () {
            if (this.files[0].size > 10000000) {
                var control = jQuery('#inputImage');
                control.replaceWith(control = control.val('').clone(true));
                document.getElementById('val-img').innerHTML = "La imagen debe pesar menos de 10 mb. Seleccione nuevamente";
                $('#val-img').css("color", "red");

            }
            else {
                document.getElementById('val-img').innerHTML = "";
            }
        });
        $.validator.addMethod('filesize', function (value, element, param) {
            return this.optional(element) || (element.files[0].size <= param)
        });
        $(function () {
            $('input[name^="foto"]').rules('add', {
                accept: "png,jpg,jpeg",
                filesize: 10485760,
                messages: {
                    accept: "Solo archivos png, jpg, jpeg",
                    filesize: "Solo archivos de tamaño menor a 10 MB"
                }
            });

        });

        jQuery(document).ready(function () {
            jQuery.validator.methods["date"] = function (value, element) { return true; }

            var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });
    </script>
    <script src="@Url.Content("~/Content/Administrador/plugins/cropper/cropper.min.js")"></script>
    <script src="@Url.Content("~/Content/Administrador/scripts/image-cropper.js")"></script>

}
