@model CreativaSl.Web.ViajesPorChiapas.Models.PreguntasFrecuentesModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured
{

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="page-content">
        <div id="Error" class="error message" style="display: none">
            <h3></h3>
        </div>
        <div id="Success" class="success message" style="display: none">
            <h3></h3>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">Viaje Por Chiapas<small>  Administración</small></h3>
                </div>
            </div>
            <div class="tab-pane">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Nueva pregunta frecuente</div>
                    </div>
                    @using (Html.BeginForm("Create", "PreguntasFrecuentes", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.id_preguntaFrecuente)


                        <div class="portlet-body form">
                            <h3 class="form-section">Información de la pregunta</h3>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Seccion<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.DropDownListFor(model => model.tablaSeccionesCmb, ViewData["cmbSecciones"] as SelectList, new { id = "ListSecciones", @class = "span12 m-wrap chosen" })
                                            @Html.ValidationMessageFor(model => model.tablaSeccionesCmb)
                                        </div>
                                    </div>
                                    <span class="help-block">Seleccione la seccion </span>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Pregunta<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.pregunta, new { id = "pregunta", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.pregunta)
                                            <span class="help-block">Ingrese la pregunta</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Respuesta<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.respuesta, new { id = "respuesta", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.respuesta)
                                            <span class="help-block">Ingrese la respuesta</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Pregunta Ingles<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.preguntaIngles, new { id = "preguntaIngles", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.preguntaIngles)
                                            <span class="help-block">Ingrese la pregunta</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Respuesta Ingles<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.respuestaIngles, new { id = "respuestaIngles", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.respuestaIngles)
                                            <span class="help-block">Ingrese la respuesta</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <input type="submit" value="Guardar" class="btn green">
                                <a href="@Url.Action("Index","PreguntasFrecuentes")" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>

        jQuery(document).ready(function () {
            var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });
    </script>

}
