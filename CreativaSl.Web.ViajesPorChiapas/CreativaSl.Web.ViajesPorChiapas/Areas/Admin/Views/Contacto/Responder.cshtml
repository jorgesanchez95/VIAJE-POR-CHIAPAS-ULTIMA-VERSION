@model CreativaSl.Web.ViajesPorChiapas.Models.ContactoModels
@{
    ViewBag.Title = "Responder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured
{
    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="page-content">
        <div id="Error" class="error message" style="display: none">
            <h3></h3>
        </div>
        <div id="Success" class="success message" style="display: none">
            <h3></h3>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">Viaje Por Chiapas<small>  Administración</small></h3>
                </div>
            </div>
            <div class="tab-pane">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Responder</div>
                    </div>
                    @using (Html.BeginForm("Responder", "Contacto", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.id_contacto)

                        <div class="portlet-body form">
                            <h3 class="form-section">Contacto</h3>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Horario en que podemos contactarlo<span class="required"></span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.horarioContacto, new { id = "horarioContacto", @class = "span12 m-wrap", @readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.horarioContacto)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="control-group">
                                        <label class="control-label">Nombre<span class="required"></span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.nombre, new {id = "nombre", @class = "span12 m-wrap", @readonly = "true"})
                                            @Html.ValidationMessageFor(model => model.nombre)
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="control-group">
                                        <label class="control-label">Correo<span class="required"></span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.correo, new {id = "correo", @class = "span12 m-wrap", @readonly = "true"})
                                            @Html.ValidationMessageFor(model => model.correo)
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="control-group">
                                        <label class="control-label">Telefono<span class="required"></span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.telefono, new {id = "telefono", @class = "span12 m-wrap", @readonly = "true"})
                                            @Html.ValidationMessageFor(model => model.telefono)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Asunto<span class="required"></span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.asunto, new { id = "asunto", @class = "span12 m-wrap", @readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.asunto)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Mensaje<span class="required"></span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.mensaje, new { id = "mensaje", @class = "span12 m-wrap", @readonly = "true", @rows ="8" })
                                            @Html.ValidationMessageFor(model => model.mensaje)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Respuesta<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.respuesta, new { id = "respuesta", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.respuesta)
                                            <span class="help-block">Ingrese la respuesta</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <input type="submit" value="Guardar" class="btn green">
                                <a href="@Url.Action("Index","Contacto")" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
         jQuery(document).ready(function () {
             var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });
    </script>
}
