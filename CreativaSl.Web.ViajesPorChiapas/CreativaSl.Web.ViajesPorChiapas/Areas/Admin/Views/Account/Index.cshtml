@model CreativaSl.Web.ViajesPorChiapas.Models.UsuarioModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}
@section featured
{
    <body class="login">
        <div class="logo">
            <img src="@Url.Content("~/Content/Administrador/Logo.png")" alt="" width="250px" height="150px" />
        </div>
        <div class="content">
            @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary(true);

                <h3 class="form-title">Bienvenido, Iniciar Sesión</h3>
                <div class="alert alert-error hide">
                    <button class="close" data-dismiss="alert"></button>
                    <span>Introducir Usuario y Contraseña</span>
                </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.user, new { @class = "m-wrap placeholder-no-fix" })
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-user"></i>
                            @Html.TextBoxFor(model => model.user, new { @class = "", placeholder = "Correo Electronico", style = "width: 80%;" })
                            @Html.ValidationMessageFor(model => model.user)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.password, new { @class = "m-wrap placeholder-no-fix" })
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-lock"></i>
                            @Html.PasswordFor(model => model.password, new { @class = "", placeholder = "Contraseña", style = "width: 80%;" })
                            @Html.ValidationMessageFor(model => model.password)

                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "checkbox" })
                    @Html.Label("Recordar", new { @class = "checkbox" })
                    <button type="submit" class="btn green pull-right">
                        Iniciar Sesión<i class="m-icon-swapright m-icon-white"></i>
                    </button>
                </div>
                <div class="forget-password">
                    <h4>Olvidaste tu Contraseña?</h4>
                    <p>Dar Click <a href="@Url.Action("GetPassword", "Account")" class="" id="forget-password"> Aqui </a>Para resetear tu Contraseña</p>
                </div>
            }
            <div class="copyright">
                @DateTime.Now.Year &copy;Admin Viaje Por Chiapas.
            </div>
        </div>
    </body>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/site.css")

}


